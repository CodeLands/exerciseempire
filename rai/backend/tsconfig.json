{ 
  "compilerOptions": { 
    "paths": {
      "/*": ["./src/*"]
    },
    "target": "ES6",
    "module": "commonjs",
    "rootDir": "./src",
    "baseUrl": ".",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*", "../archive/old/Users/UserRepository.ts"]
  // "include": ["src/app/**/*.ts", "src/tests/**/*.ts"]
}
